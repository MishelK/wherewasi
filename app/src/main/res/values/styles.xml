<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f95700</item>
        <item name="colorPrimaryDark">#f95700</item>
        <item name="colorAccent">#f95700</item>
        <item name="android:textColor">@android:color/black</item>


    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="SongImage">
        <item name="android:bottomLeftRadius">6dp</item>
        <item name="android:bottomRightRadius">6dp</item>
        <item name="android:topLeftRadius">6dp</item>
        <item name="android:topRightRadius">6dp</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="TextInputStyle">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>
</resources>